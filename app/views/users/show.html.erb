<main>
  <section>
    <div class="card">
      <%= image_tag(@user.photo, class: "user-image border") %>
      <div class="user-data border">
        <h1><%= @user.name %></h1>
         <p><%= @user.bio %></p>
        <p class="number-posts">Posts: <%= @user.posts_counter %></p>
        <div class="right">
          <%= link_to "Add a post", new_user_post_path(@user), class: "btn right" %>
        </div>
  </section>
  <section class="center">
    <ul>
      <% @user.posts.each do |post| %>
        <%= link_to user_post_path(@user, post) do %>
          <li class="card column hover">
            <h3 class="left"><%= post.title %></h3>
            <h4 class="left"><%= post.text %></h4>
            <div class="right">
              <span>Comments: <%= post.comments_counter %></span>
              <span class="left">Likes: <%= post.likes_counter %></span>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
    <%= link_to "See all posts", user_posts_path(user_id: @user.id), class: "btn" %>
  </section> 
</main>